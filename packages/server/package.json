    "express": "^4.17.1",
    "jest": "^27.0.6",
    "jsdom": "^16.4.0",
    "nanoid": "^3.1.25",
    "nodemon": "^2.0.7",
    "socket.io": "^4.1.3",
    "socket.io-client": "^4.1.3",
    "ts-jest": "^27.0.4",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
